<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android.datePickerDialogTheme">@style/Picker.Theme</item>
        <item name="android.timePickerDialotTheme">@style/Picker.Theme</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <!-- Will set main activity title color -->
        <item name="titleTextColor">@color/colorAccent</item>
    </style>

    <!-- This style is used to set the color of the back arrow in bar profile activity -->
    <style name="ToolbarColoredIcons" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <!-- This style will cause filter menu to appear below action bar -->
    <style name="FilterMenu" parent="Widget.AppCompat.PopupMenu.Overflow" >
        <item name="overlapAnchor">false</item>
    </style>

    <!-- Will define the style for menu buttons on action bars -->
    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">100dp</item>
        <item name="android:width">100dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@android:color/background_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Dialog.Picker" parent = "Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>

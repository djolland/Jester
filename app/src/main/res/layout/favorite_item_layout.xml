<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/bar_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:paddingRight="5dp"
        android:contentDescription="Bar Image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/bar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:contentDescription="Deal Description Text"/>

        <TextView
            android:id="@+id/bar_hours"
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:textSize="12sp"
            android:contentDescription="Deals"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/deal_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:paddingRight="7dp"
                android:lineSpacingMultiplier="1.4"
                android:contentDescription="Deals"/>


            <TextView
                android:id="@+id/event_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="7dp"
                android:textSize="15sp"
                android:lineSpacingMultiplier="1.4"
                android:contentDescription="Events"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
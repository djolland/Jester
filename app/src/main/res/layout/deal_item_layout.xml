<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/bar_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:paddingRight="5dp"
        android:contentDescription="Bar Image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/deal_description_text"
            android:layout_width="match_parent"
            android:layout_height="26sp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:contentDescription="Deal Description Text"/>


        <TextView
            android:id="@+id/deal_price_text"
            android:layout_width="match_parent"
            android:layout_height="24sp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:contentDescription="Deal Price Text"/>

        <TextView
            android:id="@+id/deal_date_text"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:contentDescription="Deal Dates"/>

        </LinearLayout>

</LinearLayout>
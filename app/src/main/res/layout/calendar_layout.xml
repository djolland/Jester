<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false">

    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/calendarView"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusedMonthDateColor="@color/colorPrimary"
        android:selectedWeekBackgroundColor="@color/colorAccent"
        android:showWeekNumber="false"
        style="@android:style/Widget.DeviceDefault.CalendarView"
        android:unfocusedMonthDateColor="@android:color/darker_gray" />
</RelativeLayout>